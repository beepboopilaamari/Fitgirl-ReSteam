{
  "name": "fitgirl-resteam",
  "version": "1.1.2",
  "description": "Steam-like game library manager for FitGirl Repacks with built-in torrent client",
  "main": "dist/main/index.js",
  "author": "FitGirl Resteam",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\" \"npm run dev:preload\"",
    "dev:main": "webpack --config webpack.main.config.js --mode development --watch",
    "dev:preload": "webpack --config webpack.preload.config.js --mode development --watch",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js --mode development",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "webpack --config webpack.main.config.js --mode production",
    "build:preload": "webpack --config webpack.preload.config.js --mode production",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
    "start": "electron .",
    "package": "npm run build && electron-builder",
    "scrape:initial": "node scripts/generate-database.js"
  },
  "dependencies": {
    "@ctrl/torrent-file": "^4.4.0",
    "antd": "^5.12.8",
    "axios": "^1.6.5",
    "better-sqlite3": "^9.2.2",
    "electron-log": "^5.0.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.7.3",
    "jsdom": "^27.0.1",
    "node-html-parser": "^7.0.2",
    "parse-torrent": "^11.0.19",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "react-window": "^1.8.10",
    "sanitize-html": "^2.11.0",
    "torrent-stream": "^1.2.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/react-window": "^1.8.8",
    "@types/sanitize-html": "^2.9.5",
    "@types/webtorrent": "^0.109.7",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.8.1",
    "electron": "^28.1.3",
    "electron-builder": "^23.6.0",
    "html-webpack-plugin": "^5.6.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "build": {
    "appId": "com.fitgirlresteam.app",
    "productName": "FitGirl Resteam",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "resources/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "beepboopilaamari",
        "repo": "Fitgirl-ReSteam"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
